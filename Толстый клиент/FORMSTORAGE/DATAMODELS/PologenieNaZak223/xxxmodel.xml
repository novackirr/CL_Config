    sub form_FieldDataChanged(field)
    s = field.Attribute("frm.abstoredata")
    if s &lt;&gt; "" and field.Value = "" then
    Set arr = field.Parent(s)
    if not arr is nothing then
    arr.RemoveAll
    end if
    end if

   ' Документ не сохраняется
   if saveCheck=0 then

          ' Очистили поле ОКАТО
          if field.name = "ОКАТО" and Len(field.value)=0 then
                  Data("|Document|Регион")= ""
                  Data("|Document|hierar_ОКАТО").RemoveAll
          end if

          ' Очистили поле Валюта
          if field.name = "Валюта" and Len(field.value)=0 then
                  Data("|Document|Цифровой_код_валюты")= ""
                  Data("|Document|Код_валюты")= ""
          end if
		  
    end if

  'Очистка полей в зависимости от значения чекбокса "Указать позиции"
   if field.name ="Указать_позиции" then
       if  Data("|Document|Указать_позиции")= 1  then
         Data("|Document|ОКПД2")=""
         Data("|Document|ОКПД2_наименование")=""
         Data("|Document|hierar_ОКПД2").RemoveAll 
         Data("|Document|ОКВЭД2")=""
